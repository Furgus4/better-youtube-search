{
	"manifest_version": 3,
	"name": "better-youtube-search",
	"version": "1.0",
	"description": "",
	"icons": {
		"16": "images/icon-16.png"
	},
	"content_scripts": [
		{
			"matches": ["https://www.youtube.com/*"],
			"js": [
				"content.js",
				"dropdown-functionality/DurationAndViews.js",
				"dropdown-functionality/KeywordsAndTags.js",
				"dropdown-functionality/SortBy.js",
				"dropdown-functionality/Type.js",
				"dropdown-functionality/UploadDate.js",
				"dropdown-functionality/View.js"
			],
			"css": ["content.css"],
            "run_at": "document_start"
		}
	],
	"permissions": ["activeTab", "scripting"],
    "web_accessible_resources": [{
        "resources": ["injected-script.js"],
        "matches": ["https://www.youtube.com/*"]
    }]
}